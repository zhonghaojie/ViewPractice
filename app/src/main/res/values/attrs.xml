<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundProgress">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="max" format="integer"/>
        <attr name="isShowText" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="Clock">
        <attr name="minuteHandColor" format="color"/>
        <attr name="secondHandColor" format="color"/>
        <attr name="hourHandColor" format="color"/>
        <attr name="hourHandWidth" format="dimension"/>
        <attr name="minuteHandWidth" format="dimension"/>
        <attr name="secondHandWidth" format="dimension"/>
        <attr name="hourHandLength" format="dimension"/>
        <attr name="minuteHandLength" format="dimension"/>
        <attr name="secondHandLength" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="lineWidth1" format="dimension"/>
        <attr name="lineWidth2" format="dimension"/>
        <attr name="lineColor1" format="color"/>
        <attr name="lineColor2" format="color"/>
        <attr name="circleStrokeWidth" />
        <attr name="hourLineLength" format="dimension"/>
        <attr name="secondLineLength" format="dimension"/>
    </declare-styleable>

    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="speed" format="integer" />
    <attr name="circleStrokeWidth" format="dimension"/>
    <attr name="radius" format="dimension"/>
    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="speed" />
    </declare-styleable>

    <declare-styleable name="VoiceView">
        <attr name="circleStrokeWidth" />
        <attr name="centerImg" format="reference"/>
        <attr name="radius"/>
        <attr name="dotCount" format="integer"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="imgScale">
            <enum name="normal" value="1"/>
            <enum name="half" value="2"/>
        </attr>
        <attr name="bgCorner" format="dimension"/>
        <attr name="bgColor" format="color"/>
        <attr name="fillColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="ProgressView">
        <attr name="circleStrokeWidth" />
        <attr name="txtSize" format="dimension"/>
        <attr name="txtColor" format="color"/>
        <attr name="radius"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>
</resources>